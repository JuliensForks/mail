{
	"name": "@adonisjs/mail",
	"version": "5.0.1",
	"description": "Mail provider for adonis framework and has support for all common mailing services to send emails",
	"main": "build/providers/MailProvider.js",
	"files": [
		"build/adonis-typings",
		"build/providers",
		"build/src",
		"build/templates"
	],
	"typings": "./build/adonis-typings/index.d.ts",
	"scripts": {
		"mrm": "mrm --preset=@adonisjs/mrm-preset",
		"pretest": "npm run lint",
		"test": "node japaFile.js",
		"clean": "del build",
		"copyfiles": "copyfiles \"templates/**/*.txt\" build",
		"compile": "npm run lint && npm run clean && tsc",
		"build": "npm run compile && npm run copyfiles",
		"commit": "git-cz",
		"release": "np",
		"version": "npm run build",
		"format": "prettier --write .",
		"prepublishOnly": "npm run build",
		"sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json adonisjs/mail",
		"lint": "eslint . --ext=.ts"
	},
	"keywords": [
		"adonis",
		"mailer",
		"node-mailer"
	],
	"author": "virk",
	"license": "MIT",
	"devDependencies": {
		"@adonisjs/core": "^5.0.2-beta-rc-6",
		"@adonisjs/mrm-preset": "^2.4.0",
		"@adonisjs/repl": "^1.1.3",
		"@adonisjs/require-ts": "^1.0.4",
		"@adonisjs/view": "^3.0.4",
		"@poppinss/dev-utils": "^1.0.11",
		"@types/node": "^14.14.0",
		"aws-sdk": "^2.774.0",
		"commitizen": "^4.2.1",
		"copyfiles": "^2.4.0",
		"cz-conventional-changelog": "^3.3.0",
		"del-cli": "^3.0.1",
		"dotenv": "^8.2.0",
		"eslint": "^7.11.0",
		"eslint-config-prettier": "^6.13.0",
		"eslint-plugin-adonis": "^1.0.15",
		"eslint-plugin-prettier": "^3.1.4",
		"github-label-sync": "^2.0.0",
		"husky": "^4.3.0",
		"japa": "^3.1.1",
		"mrm": "^2.5.3",
		"np": "^6.5.0",
		"npm-audit-html": "^1.4.3",
		"prettier": "^2.1.2",
		"typescript": "^4.0.3"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"peerDependencies": {
		"@adonisjs/view": "^3.0.0",
		"@adonisjs/core": "^5.0.2-beta-rc"
	},
	"dependencies": {
		"@poppinss/colors": "^2.0.3",
		"@poppinss/manager": "^3.0.7",
		"@poppinss/utils": "^2.5.7",
		"fastq": "^1.8.0",
		"get-stream": "^6.0.0",
		"got": "^11.7.0",
		"multi-part": "^3.0.0",
		"nodemailer": "^6.4.14"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/adonisjs/adonis-mail.git"
	},
	"bugs": {
		"url": "https://github.com/adonisjs/adonis-mail/issues"
	},
	"homepage": "https://github.com/adonisjs/adonis-mail#readme",
	"nyc": {
		"exclude": [
			"test"
		],
		"extension": [
			".ts"
		]
	},
	"husky": {
		"hooks": {
			"commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js",
			"pre-commit": "npm audit --production --json | ./node_modules/.bin/npm-audit-html && git add npm-audit.html"
		}
	},
	"np": {
		"contents": ".",
		"anyBranch": false
	},
	"publishConfig": {
		"tag": "next",
		"access": "public"
	},
	"adonisjs": {
		"templates": {
			"config": [
				{
					"src": "config.txt",
					"dest": "mail"
				}
			],
			"contracts": [
				{
					"src": "contract.txt",
					"dest": "mail"
				}
			]
		},
		"types": "@adonisjs/mail",
		"providers": [
			"@adonisjs/mail"
		],
		"env": {
			"SMTP_HOST": "",
			"SMTP_PORT": "587",
			"SMTP_USERNAME": "",
			"SMTP_PASSWORD": "",
			"SES_ACCESS_KEY": "",
			"SES_ACCESS_SECRET": "",
			"SES_REGION": "us-east-1",
			"MAILGUN_API_KEY": "",
			"SPARKPOST_API_KEY": ""
		}
	}
}
